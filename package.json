{
  "name": "bottomline",
  "version": "1.0.0",
  "description": "Click a \"mole\" as it appears. The amount of time each mole stays visible should be random. The game should have a time limit. There should be controls available to start, stop and reset the game.",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "dev": "npm-run-all --parallel start watch",
    "start": "serve public",
    "deploy": "gh-pages -d public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:amabes/bottomline.git"
  },
  "keywords": [],
