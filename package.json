  "bugs": {
    "url": "https://github.com/amabes/bottomline/issues"
  },
  "homepage": "https://github.com/amabes/bottomline#readme",
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "npm-run-all": "^4.1.5",
    "rollup": "^1.5.0",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "serve": "^10.1.2"
  }
}
